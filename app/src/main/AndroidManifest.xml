<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.licarijd.jnj.trainingm8" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.licarijd.jnj.trainingm8.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //The user taps anywhere on opening page to access next page (bodybuilder).
        <activity
            android:name="SecondIntroPage"
            android:label="Training M8">
        </activity>

        <activity
            android:name="MainMenu"
            android:label="Training M8">
        </activity>

        //Once in the main menu, user selects a calculator.

        <activity
            android:name="OneRepMax"
            android:label="Training M8">
        </activity>

        <activity
            android:name="PercentBodyFat"
            android:label="Training M8">
        </activity>

        <activity
            android:name="MaxHeartRate"
            android:label="Training M8">
        </activity>

        <activity
            android:name="MuscleComposition"
            android:label="Training M8">
        </activity>

        <activity
            android:name="BMI"
            android:label="Training M8">
        </activity>

        <activity
            android:name="VO2Max"
            android:label="Training M8">
        </activity>

        //One Rep Max calculator brings up a separate results page.
        <activity
            android:name="OneRepMaxResults"
            android:label="Training M8">
        </activity>


    </application>

</manifest>
