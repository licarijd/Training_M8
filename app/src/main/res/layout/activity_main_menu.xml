<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/electricity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:editable="true"
        android:id="@+id/textView2" />

    //Added OnClick for second page

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                          One-Rep Max Calculator                         "
        android:id="@+id/button2"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="open_one_rep_max"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                             VO2 Max Calculator                             "
        android:id="@+id/button3"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:onClick="open_vo2max"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Heart Rate Calculator"
        android:id="@+id/button4"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:onClick="open_max_heart_rate"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                        Body Mass Index Calculator                       "
        android:id="@+id/button5"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_below="@+id/button7"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:onClick="open_bmi"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                      Percent Body Fat Calculator                      "
        android:id="@+id/button6"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:onClick="open_percent_fat"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muscle Composition (Fast or Slow Twitch) Assessment"
        android:id="@+id/button7"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/button6"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:onClick="open_muscle_composition"
        android:clickable="true" />

</RelativeLayout>

